<!--pages/login/login.wxml-->
<view class="container">
  <view class="header">
    <view class="logo">
      <icon type="info" size="60" color="#007AFF"></icon>
    </view>
    <view class="title">虹软人脸识别登录Demo</view>
    <view class="subtitle">Face Recognition System</view>
  </view>

  <view class="form-area">
    <view class="input-group">
      <text class="label">账号</text>
      <input class="input" placeholder="请输入管理员账号" bindinput="inputUser" placeholder-class="placeholder-style"/>
    </view>

    <view class="input-group">
      <text class="label">密码</text>
      <input class="input" password placeholder="请输入密码" bindinput="inputPwd" placeholder-class="placeholder-style"/>
    </view>

    <button class="login-btn" hover-class="btn-hover" bindtap="handleLogin">登 录</button>
  </view>

  <view class="footer">
    <text>作者 · 北方素素</text>
  </view>
</view>